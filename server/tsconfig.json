{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "rootDir": "src",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}